{
	"name": "@some-org/storybook",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@some-org/tailwind-theme": "workspace:*",
		"@some-org/ui": "workspace:*",
		"@chromatic-com/storybook": "^4.0.1",
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.29.0",
		"@playwright/test": "^1.53.1",
		"@storybook/addon-a11y": "^9.0.13",
		"@storybook/addon-docs": "^9.0.13",
		"@storybook/addon-svelte-csf": "^5.0.4",
		"@storybook/addon-vitest": "^9.0.13",
		"@storybook/sveltekit": "^9.0.13",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@types/node": "^24",
		"@vitest/browser": "^3.2.4",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-storybook": "^9.0.13",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.2.0",
		"playwright": "^1.53.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"storybook": "^9.0.13",
		"svelte": "^5.34.8",
		"svelte-check": "^4.2.2",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.0",
		"vite": "^7.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.0.0"
	}
}
